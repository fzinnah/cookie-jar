{
  "manifest_version": 3,
  "name": "Cookie Jar",
  "version": "1.0",
  "description": "Automatically reject cookies when you enter a site.",
  "permissions": ["webRequest", "webRequestBlocking", "cookies", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon.png"
  }
}
